<div class="container-fluid">

  <div class="row">
    <div class="col-12 text-center mb-3">
      <img src="./images/burger.jpg" class="img-fluid img-thumbnail image" alt="Burger Image">
      <h1 class="display-3 font-weight-bold">Eat Da Burger!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-6 mb-3">
      <h4>TO EAT</h4>
      <ul class="list-group">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-6 mb-3">
      <h4>DEVOURED</h4>
      <ul class="list-group">
        {{#each burgers}}
          {{#if devoured}}
            {{> burger devoured=true}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mb-4">
      <h3>CREATE YOUR OWN BURGER!</h3>
      <form class="new-burger">
        <div class="form-group">
          <input class="form-control mb-2" type="text" id="burger-name" placeholder="Enter a name">
        </div>
        <button class="btn btn-danger" type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>